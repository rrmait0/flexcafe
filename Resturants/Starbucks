class StarbucksWidget extends StatefulWidget {
  const StarbucksWidget({Key? key}) : super(key: key);

  @override
  _StarbucksWidgetState createState() => _StarbucksWidgetState();
}

class _StarbucksWidgetState extends State<StarbucksWidget> {
  late StarbucksModel _model;

  final scaffoldKey = GlobalKey<ScaffoldState>();
  final _unfocusNode = FocusNode();

  @override
  void initState() {
    super.initState();
    _model = createModel(context, () => StarbucksModel());

    WidgetsBinding.instance.addPostFrameCallback((_) => setState(() {}));
  }

  @override
  void dispose() {
    _model.dispose();

    _unfocusNode.dispose();
    super.dispose();
  }

